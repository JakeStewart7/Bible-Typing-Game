{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Run Vite Dev Server",
      "type": "shell",
      "command": "npm run dev",
      "options": {
        "cwd": "${workspaceFolder}/bible-typing-game"
      },
      "isBackground": true,
      "problemMatcher": {
        "pattern": [
          {
            "regexp": ".",
            "file": 1,
            "location": 2,
            "message": 3
          }
        ],
        "background": {
          "activeOnStart": true,
          "beginsPattern": ".*",
          "endsPattern": "Local.*5173"
        }
      }
    },
    {
      "label": "Kill Vite Dev Server",
      "type": "shell",
      "command": "npx kill-port 5173"
    }
  ]
}
